<Window 
	x:Class="KsWare.AppVeyorClient.UI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:KsWare.AppVeyorClient"
    xmlns:ui="clr-namespace:KsWare.AppVeyorClient.UI"
    xmlns:common="clr-namespace:KsWare.AppVeyorClient.UI.Common"
    mc:Ignorable="d"
    Title="Appveyor Client" Height="350" Width="525"
	d:DataContext="{d:DesignInstance Type={x:Type ui:MainWindowVM}}"
	>
	<Window.Resources>
		<Style x:Key="HelpButton" TargetType="Button">
			<Setter Property="Content" Value="?" />
			<Setter Property="Padding" Value="8 0" />
			<Setter Property="Background" Value="Transparent" />
			<Setter Property="BorderThickness" Value="0" />
			<Setter Property="Foreground" Value="Blue" />
		</Style>
	</Window.Resources>
	<DockPanel Margin="4 4 4 4">
		<DockPanel DockPanel.Dock="Top">
			<StackPanel DockPanel.Dock="Right">
				<Button Content="New Window" Command="{Binding NewWindowAction}" />
			</StackPanel>
			<ui:ProjectSelector DataContext="{Binding ProjectSelector}" Margin="0 0 0 6" />
		</DockPanel>
		<TabControl>
			<TabItem Header="Common">
				<StackPanel>
					<StackPanel x:Name="TokenPanel" >
						<DockPanel Margin="0 0 4 0">
							<Button DockPanel.Dock="Right" Style="{StaticResource HelpButton}" Command="{Binding HelpUrlAction}" CommandParameter="https://ci.appveyor.com/api-token"/>
							<Label Content="AppVeyor API Token: " />
						</DockPanel>
						<PasswordBox x:Name="TokenPasswordBox" LostFocus="AtTokenTextBoxLostFocus" Margin="4 0"/>
					</StackPanel>
				</StackPanel>
			</TabItem>
			<TabItem Header="Configuration" DataContext="{Binding ConfigurationPanel}">
				<ui:ConfigurationPanelView/>
			</TabItem>
			<TabItem Header="Project Environment Variables" DataContext="{Binding ProjectEnvironmentVariablesPanel}">
				<ui:ProjectEnvironmentVariablesView/>
			</TabItem>
			<TabItem Header="Avalon Editor">
				<common:AvalonEditorPanel/>
			</TabItem>
			<TabItem Header="API Tester" DataContext="{Binding ApiTesterPanel}">
				<ui:ApiTesterPanel />
			</TabItem>
		</TabControl>
	</DockPanel>

</Window>
